import discord
from discord.ext import commands

intents = discord.Intents.default()
intents.message_content = True

bot = commands.Bot(command_prefix='$', intents=intents)

@bot.event
async def on_ready():
    print(f'Bot online sebagai {bot.user}')

# Database jenis sampah
recycle_items = ['botol plastik', 'kertas', 'kardus', 'kaleng', 'botol kaca']
trash_items = ['tisu', 'masker', 'sisa makanan', 'popok', 'puntung rokok']

# Command pilah sampah
@bot.command()
async def pilah(ctx, *, barang: str):
    barang = barang.lower()

    if barang in recycle_items:
        await ctx.send(f"â™»ï¸ **{barang}** bisa didaur ulang!")
    elif barang in trash_items:
        await ctx.send(f"ğŸ—‘ï¸ **{barang}** harus dibuang ke tempat sampah biasa.")
    else:
        await ctx.send("â“ Barang belum dikenal. Contoh: `$pilah botol plastik`")

# Command kirim poster
@bot.command()
async def poster(ctx):
    await ctx.send(
        "ğŸ“¢ Ini poster panduan memilah sampah:",
        file=discord.File("images/poster.png")
    )

# Masukkan token bot kamu di bawah ini
bot.run("TOKEN")

